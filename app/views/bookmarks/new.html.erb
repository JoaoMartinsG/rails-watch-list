
<div class="container mt-5">
  <div class="p-2 w-100 pt-5"><h2>New movie:</h2></div>
  <div class="container">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment %>
      <%= f.association :movie %>
      <%= link_to "Cancel", list_path(@list), class: 'btn btn-primary' %>
      <%= f.submit 'Add', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
