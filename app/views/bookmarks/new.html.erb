
<div class="container mt-5">
  <div class="p-2 w-100 pt-5"><h2>New movie:</h2></div>
  <div class="container">
    <%= simple_form_for [@list, @bookmark] do |f| %>
      <%= f.input :comment, input_html: { class: 'form-control' } %>
      <%= f.association :movie, input_html: { class: 'form-select' }  %>
      <%= link_to "Cancel", list_path(@list), class: 'btn btn-primary mt-3' %>
      <%= f.submit 'Add', class: 'btn btn-primary mt-3' %>
    <% end %>
  </div>
</div>
