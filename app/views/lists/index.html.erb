<%= render "components/banner" %>

<div class="container mt-5">
  <div class="d-flex">
    <div class="p-2 w-100"><h1>My lists</h1></div>
    <div class="p-2"><%= link_to 'New List', new_list_path, class: 'btn btn-success'%></div>
  </div>
  <ul>
  <div class="containter mt-5">
    <div class="d-flex justify-content-center align-items-center">
      <% @lists.each do |list| %>
      <% if list.photo.attached? %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
        <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Ftse4.mm.bing.net%2Fth%3Fid%3DOIP.F00dCf4bXxX0J-qEEf4qIQHaD6%26pid%3DApi&f=1)">
          <%= link_to list.name, list_path(list) %>
        </div>
        <% end  %>
      <% end  %>
    </div>
  </div>
  </ul>
</div>
