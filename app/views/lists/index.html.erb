<%= render "components/banner" %>

<div class="container mt-5">
  <div class="d-flex">
    <div class="p-2 w-100"><h1>My lists</h1></div>
    <div class="p-2 flex-shrink-1 text-light"><%= link_to 'New List', new_list_path, class: 'btn btn-success'%></div>
  </div>
  <ul>
  <div class="containter mt-5">
    <div class="d-flex justify-content-center align-items-center">
      <% @lists.each do |list| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end  %>
    </div>
  </div>
  </ul>
</div>
