<%= render "components/list_banner" %>


<div class="container mt-5">
  <div class="d-flex">
    <div class="p-2 w-100"><h1>My movies:</h1></div>
    <div class="p-2 flex-shrink-1"><%= link_to 'Add movie', new_list_bookmark_path(@list), class: 'btn btn-success' %></div>
  </div>

<div class="container text-center">
  <div class="row">

<% @list.movies.each do |movie| %>
  <div class="col">
    <div class="card my-3" style="width: 35rem;">
      <div class="card-body">
        <h5 class="card-title"><strong><%= movie.title %></strong>  <i class="fa-solid fa-star"></i> <%= movie.rating %></h5>
        <%bookmark = Bookmark.find_by(movie_id: movie.id) %>
        <p class="card-text"><%= movie.overview %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item d-flex justify-content-between"><div><i class="fa-solid fa-quote-left"></i> <%= bookmark.comment %></div><%= link_to 'delete',bookmark_path(bookmark),data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
      </ul>
    </div>
  </div>
<% end %>


</div>
